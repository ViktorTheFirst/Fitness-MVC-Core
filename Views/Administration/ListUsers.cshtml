@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

    <div class="page_bg" id="listUsers_page">
        <br />
        <h2>All Users</h2>

        @if (Model.Any())
        {
            <div class="row">
                <a asp-action="Register" asp-controller="Account" class="btn forms_button">Add new user</a>
            </div>

            foreach (var user in Model)
            {
                <div class="row">
                    <div class="col span-2-of-3">
                        <div class="row">
                            <div class="col span-1-of-3">
                                <label>User ID:</label>
                            </div>
                            <div class="col span-2-of-3">
                                <h5>@user.Id</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col span-1-of-3">
                                <label>User Name:</label>
                            </div>
                            <div class="col span-2-of-3">
                                <h5>@user.Email</h5>
                            </div>
                        </div>
                    </div>





                    <div class="col span-1-of-3">
                        <a href="#" class="btn forms_button">Edit</a>
                        <a href="#" class="btn forms_button">Delete</a>
                    </div>
    </div>
            }
        }
        else
        {
            
            <div class="row">
                No users created yet
            </div>
            <div class="row">
                <h5>
                    Use the button below to create a user
                </h5>

                <div class="row">
                    <a class="btn forms_button"
                       asp-controller="Account" asp-action="Register">
                        Add new user
                    </a>
                </div>
            </div>
            
        }
    </div>