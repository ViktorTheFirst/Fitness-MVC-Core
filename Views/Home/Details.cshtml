@model HomeDetailsViewModel

@{
    ViewBag.Title = "Customer Details";
    var photoPath = "/Images/" + (Model.Customer.PhotoPath ?? "noImage.jpg");
}
    <div class="page_bg" id="listUsers_page">
        <br />
        <h2>@Model.PageTitle</h2>
        <div class="row">
            <div class="col span-1-of-3">
                <h3>ID: @Model.Customer.Id</h3>
                <h3>Name: @Model.Customer.Name </h3>
                <h3>Email : @Model.Customer.Email</h3>
                <h3>Department : @Model.Customer.Department</h3>
            </div>

            <div class="col span-2-of-3">
                <img class="card-img-top" src="@photoPath" style="width:400px;" />
            </div>
        </div>
        <div class="row">
            <a asp-controller="home" asp-action="index" class="btn forms_button">Back</a>
            <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Customer.Id" class="btn forms_button">Edit</a>
            <a href="#" class="btn forms_button">Delete</a>
        </div>
        
            <script src="~/js/CustomScript.js"></script>
        
    </div>